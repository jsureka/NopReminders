@model RemindersModel

<input asp-for="MessageTemplateModel.Id" type="hidden" />
<div class="card-body">
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="MessageTemplateModel.AllowedTokens" />
        </div>
        <div class="col-md-9">
            <span id="@Html.IdFor(model => model.MessageTemplateModel.AllowedTokens)">
                @Model.MessageTemplateModel.AllowedTokens
            </span>
            <input asp-for="MessageTemplateModel.AllowedTokens" type="hidden" />

        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="MessageTemplateModel.MessageTemplateName" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="MessageTemplateModel.MessageTemplateName" />
            <span asp-validation-for="MessageTemplateModel.MessageTemplateName"></span>
        </div>
    </div>
    <div>
         <div>
                <div class="form-group row">
                    <div class="col-md-3">
                    <nop-label asp-for="MessageTemplateModel.BccEmailAddresses" />
                    </div>
                    <div class="col-md-9">
                    <nop-editor asp-for="MessageTemplateModel.BccEmailAddresses" />
                    <span asp-validation-for="MessageTemplateModel.BccEmailAddresses"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                    <nop-label asp-for="MessageTemplateModel.Subject" />
                    </div>
                    <div class="col-md-9">
                    <nop-editor asp-for="MessageTemplateModel.Subject" />
                    <span asp-validation-for="MessageTemplateModel.Subject"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                    <nop-label asp-for="MessageTemplateModel.Body" />
                    </div>
                    <div class="col-md-9">
                    <nop-editor asp-for="MessageTemplateModel.Body" asp-template="RichEditor" />
                    <span asp-validation-for="MessageTemplateModel.Body"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                    <nop-label asp-for="MessageTemplateModel.EmailAccountId" />
                    </div>
                    <div class="col-md-9">
                    <nop-select asp-for="MessageTemplateModel.EmailAccountId" asp-items="@(new SelectList(Model.MessageTemplateModel.AvailableEmailAccounts, "Id", "DisplayName", Model.MessageTemplateModel.EmailAccountId))" />
                    <span asp-validation-for="MessageTemplateModel.EmailAccountId"></span>
                    </div>
                </div>
         </div>
    </div>
</div>
